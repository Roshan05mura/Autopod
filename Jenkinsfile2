pipeline {

agent any
   environment{
       tag=7
   }
  stages {

    stage('Deploy to k8s') {
      steps {
           sh "chmod +x changeSecret.sh"
           sh "./changeSecret.sh"
           sh "chmod +x changeTest.sh"
           sh "./changeTest.sh"
           script{
                try{
                   sh "kubectl apply -f secret${tag}.yml"
                   sh "kubectl apply -f test${tag}.yml"
                   }catch(error){
                        sh "kubectl create -f secret${tag}.yml"
                        sh "kubectl create -f test${tag}.yml"
                   }
                  }
           }
      }
    }

  }

}
